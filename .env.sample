# ===========================================
# EXTERNAL PORTS (change these as needed)
# ===========================================
FRONTEND_EXTERNAL_PORT=3021
BACKEND_EXTERNAL_PORT=5021
LIVEKIT_EXTERNAL_PORT=7883

# ===========================================
# PUBLIC URLs (browser access)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:5021
LIVEKIT_PUBLIC_URL=ws://localhost:7883

# ===========================================
# BACKEND SETTINGS
# ===========================================
HOST=0.0.0.0
PORT=3000
ENVIRONMENT=development
ACCESS_TOKEN_SECRET=your-secret-key-change-this-in-production

# ===========================================
# ADMIN SETUP
# ===========================================
CREATE_ADMIN_INITIALLY=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password

# ===========================================
# INVITE CODE SETTINGS
# ===========================================
INVITE_CODE_EXPIRY_HOURS=1

# ===========================================
# LIVEKIT CONFIGURATION
# ===========================================
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# Note: These are set by docker-compose, no need to change:
# - DATABASE_URL (uses internal: mongodb://mongo:27017/litecord)
# - LIVEKIT_API_URL (uses internal: http://livekit:7880)
# - LIVEKIT_URL (uses LIVEKIT_PUBLIC_URL for browser access)
