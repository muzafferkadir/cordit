DATABASE_URL=mongodb://localhost:27017/cordit
HOST=0.0.0.0
PORT=3000
ENVIRONMENT=development

# Security: JWT Secret (MUST be at least 32 characters in production)
ACCESS_TOKEN_SECRET=your-secret-key-change-this-in-production-min-32-chars

# Security: CORS allowed origins (comma-separated, use * for all in development only)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Admin Setup
CREATE_ADMIN_INITIALLY=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password

# Invite Code Settings
INVITE_CODE_EXPIRY_HOURS=1

# LiveKit Configuration
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
# WS URL for clients; HTTP(S) API URL for server SDK (defaults to LIVEKIT_URL with ws->http)
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_URL=http://localhost:7880